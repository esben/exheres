SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    test:
        dev-python/py[>=1.4.22][python_abis:*(-)?]
        dev-python/pytest[>=2.6.0][python_abis:*(-)?]
        dev-python/coverage[>=3.7.1][python_abis:*(-)?]
        dev-python/cov-core[>=1.14.0][python_abis:*(-)?]
"

BUGS_TO="esben@haabendal.dk"

